<?php
$title = 'Add new Locatiom';
$this->headTitle($title);
?>
<h1><?php $this->escapeHtml($title) ?></h1>
<?php echo $this->partial('blocks/navigation-buttons.phtml') ?>
<?php
// This provides a default CSS class and placeholder text for the title element:
$title = $form->get('title');
$title->setAttribute('class', 'form-control');
$title->setAttribute('placeholder', 'Location Title');

// This provides a default CSS class and placeholder text for the location element:
$long = $form->get('long');
$long->setAttribute('class', 'form-control');
$long->setAttribute('placeholder', 'Longitude');

$lat = $form->get('lat');
$lat->setAttribute('class', 'form-control');
$lat->setAttribute('placeholder', 'Latitude');

