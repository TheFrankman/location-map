        <?php echo $this->formElementErrors()->render($title, ['class' => 'help-block']) ?>
    </div>

    <div class="form-group">
        <?php echo $this->formLabel($type) ?>
        <?php echo $this->formElement($type) ?>
        <?php echo $this->formElementErrors()->render($type, ['class' => 'help-block']) ?>
    </div>

    <div class="form-group">
        <?= $this->formLabel($form->get('file')); ?>
        <?= $this->formElement($form->get('file')); ?>
        <?= $this->formElementErrors($form->get('file')); ?>
        <div class="hint">(PNG and JPG formats are allowed)</div>
    </div>
<?php
echo $this->formSubmit($submit);
echo $this->formHidden($form->get('id'));
